<%- include('../../partials/head')%>
<link rel="stylesheet" href="/css/list.css">
</head>

<body>

    <%- include('../../partials/navbar')%>
    <section class="container mainContent">
        <h1>Shopping List</h1>
        <ul>
            <% for (let item of items) { %>
            <li><a href="/shopping_list/<%= item._id %> "><%= item.name %></a>
                <form action="/shopping_list/<%= item._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button id="delete"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                            <path
                                d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                        </svg></button></form>
            </li>
            <% } %>
        </ul>
        <a href="/shopping_list/new"><button id="add">Add Item</button></a>


    </section>
    <%- include('../../partials/footer')%>