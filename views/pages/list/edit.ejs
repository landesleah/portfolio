<%- include('../../partials/head')%>
<link rel="stylesheet" href="/css/list.css">

</head>

<body>

    <%- include('../../partials/navbar')%>
    <section class="container mainContent">
        <h1>Edit Item</h1>
        <form action="/shopping_list/<%= item._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
            <label for="name">Item Name:</label>
            <input type="text" name="name" id="name" value="<%= item.name %>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Need item name
            </div>
            <br>
            <label for="qty">Item Quantity: </label>
            <input type="number" name="qty" id="qty" value="<%= item.qty %>">
            <br>
            <label for="store">Store: </label>
            <select name="store" id="store">
                <% for (let store of stores) { %>
                <option value="<%= store %>" <%= item.store === store ? 'selected' : '' %>><%= store %></option>
                <% } %>
            </select>
            <br>
            <label for="priority">Priority: </label>
            <select name="priority" id="priority">
                <% for (let priority of priorities) { %>
                <option value="<%= priority %>" <%= item.priority === priority ? 'selected' : '' %>><%= priority %>
                </option>
                <% } %>
            </select>
            <br>
            <button>Update</button>
        </form>
        <a href="/shopping_list/<%= item._id %>"><button>Back</button></a>
        <a href="/shopping_list"><button>Home</button></a>




    </section>
    <%- include('../../partials/footer')%>